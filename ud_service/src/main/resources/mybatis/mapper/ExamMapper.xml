<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ud.manage.dao.mapper.ExamMapper">
	<select id="getList" parameterType="map" resultType="Exam">
		select * from exam
		<if test="skip != null and max != null">
			limit #{skip},#{max}
		</if>
	</select>
	
	<select id="getById" parameterType="map" resultType="Exam">
		select * from exam 
		where 
        id = #{id} 
	</select>

	<select id="getCount" parameterType="map" resultType="int">
		select count(*) from exam
	</select>

	<insert id="create" parameterType="Exam">
		<![CDATA[
        INSERT INTO exam (
        	id ,
        	type ,
        	question ,
        	options ,
        	answer ,
        	createTime 
        ) VALUES (
        	#{id} ,
        	#{type} ,
        	#{question} ,
        	#{options} ,
        	#{answer} ,
        	#{createTime} 
        )
    	]]>
	</insert>

	<update id="update" parameterType="Exam">
		<![CDATA[
        UPDATE exam SET
	        type = #{type} ,
	        question = #{question} ,
	        options = #{options} ,
	        answer = #{answer}
        WHERE 
	        id = #{id} 
    	]]>
	</update>

	<delete id="delete" parameterType="map">
		<![CDATA[
        DELETE FROM exam 
        WHERE
        id = #{id} 
    	]]>
	</delete>
</mapper>